@model BibliotecaAppV2.Models.Emprestimo
@{
    ViewData["Title"] = "Excluir Empréstimo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Excluir Empréstimo</h2>

<div>
    <h4>Tem certeza que deseja excluir este empréstimo?</h4>
    <dl class="row">
        <dt class="col-sm-2">Livro</dt>
        <dd class="col-sm-10">@Model.Livro?.Titulo</dd>
        <dt class="col-sm-2">Membro</dt>
        <dd class="col-sm-10">@Model.Membro?.Nome</dd>
        <dt class="col-sm-2">Data de Empréstimo</dt>
        <dd class="col-sm-10">@Model.DataEmprestimo.ToString("dd/MM/yyyy")</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>