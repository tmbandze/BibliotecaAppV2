@{
    ViewData["Title"] = "Resetar Senha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Resetar Senha do Funcionário</h2>

<form asp-action="ResetarSenha" method="post">
    <input type="hidden" name="id" value="@ViewBag.FuncionarioId" />

    <div class="form-group">
        <label>Nova Senha para @ViewBag.Nome:</label>
        <input type="password" name="novaSenha" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-warning">Redefinir Senha</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
