@model BibliotecaAppV2.Models.Livro
@{
    ViewData["Title"] = "Excluir Livro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Excluir Livro</h2>

<div>
    <h4>Tem certeza que deseja excluir este livro?</h4>
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>
        <dt class="col-sm-2">Autor(es)</dt>
        <dd class="col-sm-10">
            @(Model.LivroAutores != null && Model.LivroAutores.Any()
                        ? string.Join(", ", Model.LivroAutores.Select(la => la.Autor?.Nome))
                        : "Sem autor")
        </dd>
        <dt class="col-sm-2">Editora</dt>
        <dd class="col-sm-10">@Model.Editora?.Nome</dd>
        <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Model.ISBN</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>