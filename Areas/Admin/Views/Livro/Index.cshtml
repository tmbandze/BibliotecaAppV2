@model IEnumerable<BibliotecaAppV2.Models.Livro>
@{
    ViewData["Title"] = "Livros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Livros</h2>

<a asp-action="Create" class="btn btn-success mb-3">Novo Livro</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Autor(es)</th>
            <th>Editora</th>
            <th>Categoria</th>
            <th>Ano</th>
            <th>ISBN</th>
            <th>Estoque</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Titulo</td>
                    <td>
                        @(item.LivroAutores != null && item.LivroAutores.Any()
                                        ? string.Join(", ", item.LivroAutores.Select(la => la.Autor?.Nome))
                                        : "Sem autor")
            </td>
            <td>@item.Editora?.Nome</td>
            <td>@item.Categoria?.Nome</td>
            <td>@item.AnoPublicacao</td>
            <td>@item.ISBN</td>
            <td>@item.Quantidade</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
            </td>
        </tr>
                }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center text-muted">Nenhum livro cadastrado.</td>
            </tr>
        }
    </tbody>
</table>