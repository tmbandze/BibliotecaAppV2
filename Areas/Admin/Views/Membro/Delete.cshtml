@model BibliotecaAppV2.Models.Membro
@{
    ViewData["Title"] = "Excluir Membro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Excluir Membro</h2>

<div>
    <h4 class="text-danger">Tem certeza que deseja excluir este membro?</h4>
    <dl class="row">
        <dt class="col-sm-3">Nome</dt>
        <dd class="col-sm-9">@Model.Nome</dd>
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>
        <dt class="col-sm-3">Telefone</dt>
        <dd class="col-sm-9">@Model.Telefone</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>