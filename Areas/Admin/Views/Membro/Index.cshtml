@model IEnumerable<BibliotecaAppV2.Models.Membro>
@{
    ViewData["Title"] = "Membros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Membros</h2>

<a asp-action="Create" class="btn btn-success mb-3">
    <i class="fas fa-user-plus"></i> Novo Membro
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Data de Cadastro</th>
            <th style="width:180px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Email</td>
                    <td>@item.Telefone</td>
                    <td>@item.DataCadastro.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="Editar">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Detalhes">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <a asp-action="ResetarSenha" asp-route-id="@item.Id"
                           class="btn btn-warning btn-sm" title="Resetar Senha"
                           onclick="return confirm('Tem certeza que deseja redefinir a senha deste membro?');">
                            <i class="fas fa-key"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Excluir"
                           onclick="return confirm('Tem certeza que deseja excluir este membro?');">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">Nenhum membro cadastrado ainda.</td>
            </tr>
        }
    </tbody>
</table>