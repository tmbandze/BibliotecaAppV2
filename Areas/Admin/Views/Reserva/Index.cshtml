@model IEnumerable<BibliotecaAppV2.Models.Reserva>
@{
    ViewData["Title"] = "Reservas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>


<p>
    <a asp-action="Create" class="btn btn-primary">Nova Reserva</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Livro</th>
            <th>Membro</th>
            <th>Data da Reserva</th>
            <th>Data Limite Retirada</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Livro?.Titulo</td>
                <td>@item.Membro?.Nome</td>
                <td>@item.DataReserva.ToString("dd/MM/yyyy")</td>
                <td>@item.DataLimiteRetirada?.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>