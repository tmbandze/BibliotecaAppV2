@model BibliotecaAppV2.Models.Emprestimo

@{
    ViewData["Title"] = "Registrar Empréstimo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrar Novo Empréstimo</h2>
<form asp-area="Funcionario" asp-controller="Emprestimo" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Livro</label>
        <select asp-for="LivroId" class="form-control" asp-items="ViewBag.Livros"></select>
    </div>
    <div class="form-group">
        <label>Membro</label>
        <select asp-for="MembroId" class="form-control" asp-items="ViewBag.Membros"></select>
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
    <a asp-area="Funcionario" asp-controller="Emprestimo" asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>