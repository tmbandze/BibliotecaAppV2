@model BibliotecaAppV2.Models.Emprestimo

@{
    ViewData["Title"] = "Editar Empréstimo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Empréstimo</h2>
<form asp-area="Funcionario" asp-controller="Emprestimo" asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Livro</label>
        <select asp-for="LivroId" class="form-control" asp-items="ViewBag.Livros" disabled="disabled"></select>
    </div>
    <div class="form-group">
        <label>Membro</label>
        <select asp-for="MembroId" class="form-control" asp-items="ViewBag.Membros" disabled="disabled"></select>
    </div>
    <div class="form-group">
        <label>Data do Empréstimo</label>
        <input asp-for="DataEmprestimo" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Data de Devolução Prevista</label>
        <input asp-for="DataDevolucaoPrevista" class="form-control" />
    </div>
    <div class="form-group">
        <label>Data de Devolução Real</label>
        <input asp-for="DataDevolucaoReal" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ativo</label>
        <select asp-for="Ativo" class="form-control">
            <option value="true">Sim</option>
            <option value="false">Não</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-area="Funcionario" asp-controller="Emprestimo" asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>