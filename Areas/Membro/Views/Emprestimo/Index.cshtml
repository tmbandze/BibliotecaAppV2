@model IEnumerable<BibliotecaAppV2.Models.Emprestimo>

@{
    ViewData["Title"] = "Meus Empréstimos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2><i class="fas fa-book-reader"></i> Meus Empréstimos</h2>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Você ainda não possui empréstimos registrados.
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Livro</th>
                    <th>Data do Empréstimo</th>
                    <th>Devolução Prevista</th>
                    <th>Devolução Real</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emprestimo in Model)
                {
                    var atrasado = emprestimo.DataDevolucaoReal == null &&
                    emprestimo.DataDevolucaoPrevista < DateTime.Now;

                    <tr>
                        <td>@emprestimo.Livro?.Titulo</td>
                        <td>@emprestimo.DataEmprestimo.ToString("dd/MM/yyyy")</td>
                        <td>@emprestimo.DataDevolucaoPrevista?.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (emprestimo.DataDevolucaoReal.HasValue)
                            {
                                <span class="text-success">@emprestimo.DataDevolucaoReal.Value.ToString("dd/MM/yyyy")</span>
                            }
                            else
                            {
                                <span class="text-warning">Em aberto</span>
                            }
                        </td>
                        <td>
                            @if (emprestimo.DataDevolucaoReal != null)
                            {
                                <span class="badge bg-success">Devolvido</span>
                            }
                            else if (atrasado)
                            {
                                <span class="badge bg-danger">Atrasado</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Em aberto</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Voltar ao Painel
        </a>
    </div>
</div>
