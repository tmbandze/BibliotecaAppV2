@model BibliotecaAppV2.Models.Membro

@{
    ViewData["Title"] = "Meu Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="fas fa-user"></i> Meu Perfil</h2>

    <div class="card shadow-sm p-3">
        <dl class="row">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Telefone</dt>
            <dd class="col-sm-9">@Model.Telefone</dd>

            <dt class="col-sm-3">Endereço</dt>
            <dd class="col-sm-9">@Model.Endereco</dd>

            <dt class="col-sm-3">Data de Nascimento</dt>
            <dd class="col-sm-9">@Model.DataNascimento?.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Data de Cadastro</dt>
            <dd class="col-sm-9">@Model.DataCadastro.ToString("dd/MM/yyyy")</dd>
        </dl>

        <div class="text-end">
            <a asp-action="Edit" class="btn btn-primary">
                <i class="fas fa-edit"></i> Editar Perfil
            </a>
        </div>
    </div>
</div>
