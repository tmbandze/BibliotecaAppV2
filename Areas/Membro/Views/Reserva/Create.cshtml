@model BibliotecaAppV2.Models.Livro

@{
    ViewData["Title"] = "Reservar Livro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2><i class="fas fa-book-reader mr-2"></i>Confirmar Reserva</h2>
    <hr />

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (Model != null)
    {
        <dl class="row">
            <dt class="col-sm-3"><i class="fas fa-book"></i> Título:</dt>
            <dd class="col-sm-9">@Model.Titulo</dd>

            <dt class="col-sm-3"><i class="fas fa-barcode"></i> ISBN:</dt>
            <dd class="col-sm-9">@Model.ISBN</dd>

            <dt class="col-sm-3"><i class="fas fa-tags"></i> Categoria:</dt>
            <dd class="col-sm-9">@Model.Categoria?.Nome</dd>

            <dt class="col-sm-3"><i class="fas fa-boxes"></i> Disponível:</dt>
            <dd class="col-sm-9">@Model.Quantidade</dd>
        </dl>

        <form asp-action="Create" method="get" asp-route-livroId="@Model.Id">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-check-circle mr-1"></i> Confirmar Reserva
            </button>
            <a asp-controller="Livro" asp-action="Index" class="btn btn-secondary ml-2">
                <i class="fas fa-arrow-left"></i> Cancelar
            </a>
        </form>
    }
    else
    {
        <div class="alert alert-warning">
            Livro não encontrado.
        </div>
    }
</div>
