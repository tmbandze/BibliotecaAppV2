@model IEnumerable<BibliotecaAppV2.Models.Reserva>

@{
    ViewData["Title"] = "Minhas Reservas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2><i class="fas fa-calendar-check mr-2"></i>Minhas Reservas</h2>
    <hr />

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Livro</th>
                    <th>Data da Reserva</th>
                    <th>Status</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reserva in Model)
                {
                    <tr>
                        <td>@reserva.Livro?.Titulo</td>
                        <td>@reserva.DataReserva.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @if (reserva.Ativo)
                            {
                                <span class="badge bg-success">Ativa</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Cancelada</span>
                            }
                        </td>
                        <td>
                            @if (reserva.Ativo)
                            {
                                <form asp-action="Delete" method="post" asp-route-id="@reserva.Id" onsubmit="return confirm('Tem certeza que deseja cancelar esta reserva?');">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-times"></i> Cancelar
                                    </button>
                                    @Html.AntiForgeryToken()
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            Você ainda não fez nenhuma reserva.
        </div>
    }

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Voltar ao Painel
        </a>
    </div>
</div>

@section Styles {
    <style>
        .badge {
            padding: 5px 10px;
            font-size: 0.9rem;
        }

        .bg-success {
            background-color: #28a745 !important;
            color: white;
        }

        .bg-secondary {
            background-color: #6c757d !important;
            color: white;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
    </style>
}
