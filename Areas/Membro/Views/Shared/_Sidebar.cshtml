                <p>Dashboard</p>
            </a>
        </li>
        <li class="nav-item">
            <a asp-area="Membro" asp-controller="Livro" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Livro" ? "active" : "")">
                <i class="fas fa-book"></i>
                <p>Ver Livros</p>
            </a>
        </li>
        <li class="nav-item">
            <a asp-area="Membro" asp-controller="Emprestimo" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Emprestimo" ? "active" : "")">
