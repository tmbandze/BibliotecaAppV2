@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Login";
}

<style>
    .login-container {
        display: flex;
        min-height: 100vh;
    }

    .login-panel-left {
        background: linear-gradient(140deg, #0ad1c8 0%, #1976d2 100%);
        color: white;
        width: 350px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    }

        .login-panel-left .icon-user {
            font-size: 100px;
            margin-bottom: 30px;
        }

    .login-panel-right {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f5f5f5;
    }

    .login-form-box {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 0 24px rgba(0,0,0,0.08);
        padding: 40px 35px;
        min-width: 340px;
    }

        .login-form-box .form-control {
            border-radius: 8px;
        }

    .login-title {
        font-size: 28px;
        font-weight: bold;
        color: #1976d2;
        margin-bottom: 15px;
        letter-spacing: 1px;
    }

    .login-btn {
        width: 100%;
        border-radius: 8px;
        font-weight: bold;
        font-size: 18px;
    }

    .register-link {
        display: block;
        margin-top: 18px;
        text-align: center;
    }
</style>

<div class="login-container">
    <div class="login-panel-left">
        <span class="icon-user">
            <i class="fas fa-user-circle"></i>
        </span>
        <h2>Bem-vindo ao<br /><strong>BibliotecaApp</strong></h2>
    </div>
    <div class="login-panel-right">
        <div class="login-form-box">
            <div class="login-title">Login</div>
            <p class="text-muted mb-4">Faça login para acessar o sistema</p>
            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label for="email">E-mail</label>
                    <div class="input-group">
                        <input type="email" name="email" class="form-control" placeholder="Digite seu e-mail" required autofocus />
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label for="password">Senha</label>
                    <div class="input-group">
                        <input type="password" name="password" class="form-control" placeholder="Digite sua senha" required />
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    </div>
                </div>
                <div asp-validation-summary="All" class="text-danger mb-2"></div>
                <button type="submit" class="btn btn-primary login-btn mb-2">Entrar</button>
                <a asp-action="Register" class="register-link">Registrar-se</a>
            </form>
        </div>
    </div>
</div>