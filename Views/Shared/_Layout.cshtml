@using Microsoft.AspNetCore.Identity
@using BibliotecaAppV2.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - BibliotecaAppV2</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="~/lib/admin-lte/css/adminlte.min.css" />
    <!-- FontAwesome (para ícones) -->
    <link rel="stylesheet" href="~/lib/admin-lte/plugins/fontawesome-free/css/all.min.css" />
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Seu CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        .sidebar-dark-primary {
            background-color: #213A57 !important;
        }

        .brand-link-custom {
            background: #213A57;
            color: #fff !important;
            font-weight: bold;
        }

        .sidebar .nav-link.active {
            background: #0AD1C8 !important;
            color: #213A57 !important;
        }

        .profile-pic {
            width: 38px;
            height: 38px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #0AD1C8;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light" style="background:#213A57;">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <span class="nav-link text-white font-weight-bold">BibliotecaAppV2</span>
                </li>
            </ul>
            @await Html.PartialAsync("~/Views/Shared/_Navbar.cshtml")
        </nav>
        <!-- /.navbar -->
        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="~/" class="brand-link brand-link-custom text-center">
                <span class="brand-text">BibliotecaApp</span>
            </a>
            <div class="sidebar">
                @{
                    var area = Context.Request.RouteValues["area"]?.ToString();
                }
                @if (area == "Admin")
                {
                    @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_Sidebar.cshtml")
                }
                else if (area == "Funcionario")
                {
                    @await Html.PartialAsync("~/Areas/Funcionario/Views/Shared/_Sidebar.cshtml")
                }
                else if (area == "Membro")
                {
                    @await Html.PartialAsync("~/Areas/Membro/Views/Shared/_Sidebar.cshtml")
                }
                else
                {
                    @await Html.PartialAsync("~/Views/Shared/_Sidebar.cshtml")
                }
            </div>
        </aside>
        <!-- /.sidebar -->
        <!-- Content Wrapper -->
        <div class="content-wrapper" style="background:#fff; min-height: 100vh;">
            <section class="content pt-3">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <strong>BibliotecaAppV2 &copy; @DateTime.Now.Year</strong>
        </footer>
    </div>

    <!-- JS Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/admin-lte/js/adminlte.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>