@using Microsoft.AspNetCore.Identity
@using BibliotecaAppV2.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav ml-auto align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        var currentUser = await UserManager.GetUserAsync(User);
        <li class="nav-item">
            <span class="nav-link text-white">
                @if (!string.IsNullOrEmpty(currentUser?.FotoPerfil))
                {
                    <img src="@currentUser.FotoPerfil" class="profile-pic mr-2" alt="Perfil" />
                }
                <b>@currentUser?.NomeCompleto</b>
            </span>
        </li>
        <li class="nav-item">
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-sm btn-danger ml-2">Sair</button>
            </form>
        </li>
    }
</ul>